<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='affinitybrowser'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.standard.Standard'/>
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->
  <inherits name='com.extjs.gxt.themes.Themes'/>

  <!-- Other module inherits                                      -->
  <inherits name="com.extjs.gxt.ui.GXT" />
  <inherits name="com.extjs.gxt.charts.Chart" />
  <inherits name="com.google.gwt.json.JSON" />
  <inherits name="com.google.gwt.http.HTTP" />
  <inherits name="org.fusesource.restygwt.RestyGWT" />
  <inherits name="gdurelle.tagcloud.TagCloud" />
  <inherits name='com.google.gwt.maps.GoogleMaps' />
  

  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.scientificprofiling.affinitybrowser.client.AffinityBrowser'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='model'/>
  <source path='facets'/>
  <source path='shared'/>
  <source path='visualization'/>
  
  
  <inherits name="org.scientificprofiling.affinitybrowser.AffinityBrowser"/>
  
  <servlet path="/FormSubmitServlet" class="org.scientificprofiling.affinitybrowser.server.FormSubmitServlet" />

</module>
